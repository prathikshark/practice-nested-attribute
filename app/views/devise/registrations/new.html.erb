 <%= javascript_include_tag 'signup_form' %>

<h2>Sign up</h2>
<%= link_to 'Signup as employe?' ,new_user_registration_path,method: :get ,id: 'worker-link'%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="field mb-3">
  <%= f.label :name %><br />
  <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "name" %>
</div>

  <div class="field mb-3">
    <%= f.label :address %><br />
    <%= f.text_field :address, class:"form-control", autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field mb-3">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, class:"form-control", autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
   
 <div id='worker-field'>
   <div class="field">
    <%= f.label :age %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :ssnumber %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
     <div class="field">
    <%= f.label :pic %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
